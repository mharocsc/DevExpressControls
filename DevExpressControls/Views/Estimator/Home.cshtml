<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Widgets.css")" />

@Html.DevExpress().DockPanel(
    settings =>
    {
        settings.Name = "detailsPanel";
        settings.PanelUID = "Details";
        settings.OwnerZoneUID = "topZone";
        settings.HeaderText = "Details";
        settings.VisibleIndex = 0;
        settings.ShowOnPageLoad = true;
        settings.ShowCloseButton = false;
        settings.AllowResize = true;
        settings.Styles.Content.Paddings.Padding = 0;
        settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
        settings.SetContent(() =>
        {
            Html.RenderPartial("DetailsViewPartial");
        });
    }
).GetHtml()
@Html.DevExpress().DockPanel(
    settings =>
    {
        settings.Name = "resourcesPanel";
        settings.PanelUID = "Resources";
        settings.OwnerZoneUID = "topZone";
        settings.HeaderText = "Resources";
        settings.VisibleIndex = 1;
        settings.Styles.Content.Paddings.Padding = 0;
        settings.ShowCloseButton = false;
        settings.AllowResize = true;
        settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
        settings.SetContent(() =>
        {
            Html.RenderAction("ResourcesViewPartial");
            Html.DevExpress().Label(
                setLabel =>
                {
                    setLabel.ControlStyle.CssClass = "label";
                    setLabel.Name = "SourceLabel";
                    setLabel.Text = ViewBag.Source;
                }).GetHtml();
        });
    }
).GetHtml()
